{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "@testing-library/jest-dom", "node"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "target": "ES2020"
  },
  "include": [
    "src/**/*",
    "src/**/*.test.*",
    "src/**/*.spec.*",
    "src/test/**/*"
  ]
}