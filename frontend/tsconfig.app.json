{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "lib": ["ES2022"],
    "types": ["node"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "vite.config.ts",
    "vitest.config.ts",
    "tsup.config.ts",
    "rollup.config.ts",
    "webpack.config.ts",
    "eslint.config.ts",
    "scripts/**/*.ts",
    "server/**/*.ts",
    "node/**/*.ts",
    "*.config.ts"
  ]
}
